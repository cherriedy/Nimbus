<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="hourly"
            type="com.optlab.nimbus.data.model.Forecast.HourlyReport" />

        <variable
            name="temperatureUnit"
            type="com.optlab.nimbus.data.model.Temperature.Unit" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_20dp"
        android:elevation="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_xmedium"
        android:paddingBottom="@dimen/spacing_xmedium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:hour="@{hourly.startTime}" />

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/spacing_xxlarge"
                android:layout_height="@dimen/spacing_xxlarge"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:layout_marginBottom="@dimen/spacing_xmedium"
                android:layout_weight="0.33"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                app:weather_icon="@{hourly.weatherIcon}" />

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textStyle="bold"
                app:temperature="@{hourly.temperature}"
                app:unit="@{temperatureUnit}" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>