<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.optlab.nimbus.ui.viewmodel.CurrentWeatherViewModel" />

        <variable
            name="userPrefs"
            type="com.optlab.nimbus.data.preferences.UserPreferencesManager" />

        <variable
            name="fragment"
            type="com.optlab.nimbus.ui.view.HomeFragment" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <include
            android:id="@+id/included"
            layout="@layout/fragment_current_weather"
            app:fragment="@{fragment}"
            app:userPrefs="@{userPrefs}"
            app:viewModel="@{viewModel}" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start" />
    </androidx.drawerlayout.widget.DrawerLayout>

</layout>